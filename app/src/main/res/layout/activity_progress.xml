<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple"
    android:orientation="vertical"
    tools:context="reddiapps.co.uk.cambodiaschooltrip.progress">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="Container"
            android:padding="10dp"
            android:src="@drawable/black_curved_rectangle_with_border" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="@string/progress_so_far"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <SeekBar
                android:id="@+id/sb"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/goal_img"
                android:layout_centerHorizontal="true"
                android:max="4000"
                android:rotation="-90"
                android:scaleX="1.80"
                android:scaleY="7"
                android:splitTrack="false"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/goal_img"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/thermometer"
                android:visibility="visible"

                android:scaleType="fitXY"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/progress_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Total so far:" />
            <TextView
                android:id="@+id/amount_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="50dp"
                android:fontFamily="@font/annie_use_your_telescope"
                android:text="Â£0" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
